  }

resource "azurerm_virtual_machine_data_disk_attachment" "flipkartdisklink" {
  managed_disk_id    = azurerm_managed_disk.flipkartdisk01.id
  virtual_machine_id = azurerm_virtual_machine.win-vm.id
  lun                = "0"
  caching            = "ReadWrite"
}
