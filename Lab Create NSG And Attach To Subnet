Lab Create NSG And Attach To Subnet

resource "azurerm_network_security_group" "flipkart-NSG" {
  name                = "Flipkart-NSG"
  location            = central india
  resource_group_name = flipkart-RG-CI

  security_rule {
    name                       = "allow-RDP"
    priority                   = 100
    direction                  = "Inbound"
    access                     = "Allow"
    protocol                   = "Tcp"
    source_port_range          = "*"
    destination_port_range     = "3389"
    source_address_prefix      = "*"
    destination_address_prefix = "*"
  }
depens_on= [azurerm_resourc_group.flipkart-RG-CI]
  
  }
}
